{% import ":admin:macros.html.twig" as macros %}
<div class="block">
    <h2><img  class="img-thumbnail" alt="" src="{{ layout.logoName | imagine_filter('layout_logo_thumb') }}" /> Layout {{ layout.name }}</h2>

    <ul>
        <li>Est par défaut: <span class="value">{% if layout.isDefault == 1 %}Oui{% else %}Non{% endif %}</span></li>
        <li>Skin: <span class="value">{{ layout.skin }}</span></li>
        <li>Titre : <span class="value">{{ layout.metaTitle }}</span></li>
    </ul>
    <div class="action-box">
    <a role="button" class="btn btn-primary" title="Editer" href="{{ path('donate_admin_layout_edit', { id : layout.id }) }}">
		{{ macros.icon('edit') }} Editer {{ layout.name }}
	</a>
    <a role="button" class="btn btn-default" title="Prévisualiser le layout" href="{{ path('donate_admin_layout_preview', { id : layout.id }) }}">
        {{ macros.icon('eye-open') }} Prévisualiser
    </a>
	</div>
</div>
