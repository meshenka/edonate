{% extends ":admin:layout.html.twig" %}
{% block main_content %}
    <form action="{{ path('donate_admin_user_new') }}" method="post" role="form" {{ form_enctype(form) }}>
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_row(form.username, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                <div class="input-group">
                {{ form_row(form.roles) }}
            </div>
            <div class="form-group">
                <div class="input-group">
                    {{ form_row(form.enabled) }}
                </div>
            </div>
            <div class="form-group">
                    {{ form_row(form.password.Mot_de_passe, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                    {{ form_row(form.password.Confirmation_mot_de_passe, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div>
                {{ form_widget(form.submit_save, { 'attr': {'class': 'btn btn-primary' } }) }}
            </div>
            {{ form_rest(form) }}
        </div>
    </form>
{% endblock main_content %}
