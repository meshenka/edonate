{% extends ":admin/dashboard:block.html.twig" %}
{% trans_default_domain 'messages' %}
{#
@param stats
#}
{% block content %}
{% set total = stats['done'] + stats['error'] + stats['pending'] + stats['new'] + stats['cancel'] %}
{% spaceless %}
<script type="text/javascript">
google.load("visualization", "1", {packages:["corechart"]});
google.setOnLoadCallback(drawChart);

function drawChart() {
  var data = google.visualization.arrayToDataTable([
    ['Dons', 'Nombre'],
    ['Traité', {{stats['done']}}],
    ['Erreur', {{stats['error']}}],
    ['En attente', {{stats['pending']}}],
    ['Nouveau', {{stats['new']}}],
    ['Annulé', {{stats['cancel']}}]
  ]);

  var options = {
    title: 'Répartition des dons',
    pieSliceText: 'label',
    slices: {
      4: {offset: 0.2},
      12: {offset: 0.3},
      14: {offset: 0.4},
      15: {offset: 0.4}
    }
    /*chartArea : {left:'0',top:'0',width:"100%",height:300}*/
  };

  var chart = new google.visualization.PieChart(document.getElementById('piechart'));
  chart.draw(data, options);
}
</script>
<noscript>
    {% if total == 0 %}
      <p>{{ "None donation in base" | trans }}</p>
    {% else %}
    	<table  class="table">
    		<thead>
    			<th>Dons</th>
    			<th>%</th>
    		</thead>
    		<tbody>
    			<tr>
    				<td>Traité</td>
					<td>{{ '%.1f'|format(stats['done'] *100 / total) }} %</td>
    			</tr>
    			<tr>
    				<td>Erreur</td>
					<td>{{ '%.1f'|format(stats['error'] *100 / total) }} %</td>
    			</tr>
    			<tr>
    				<td>En attente</td>
					<td>{{ '%.1f'|format(stats['pending'] *100 / total) }} %</td>
    			</tr>
    			<tr>
    				<td>Nouveau</td>
					<td>{{ '%.1f'|format(stats['new'] *100 / total) }} %</td>

    			</tr>
    			<tr>
    				<td>Annulé</td>
					<td>{{ '%.1f'|format(stats['cancel'] *100 / total) }} %</td>
    			</tr>
    		</tbody>
    	</table>
      {% endif %}
</noscript>

  <div id="piechart" style="height: 400px;"></div>
  {% if total == 0 %}
      <p>{{ "None donation in base" | trans }}</p>
  {% endif %}
{% endspaceless %}
{% endblock %}
