{% extends ":front:layout.html.twig" %}
{% trans_default_domain "messages" %}
{#
template que vas vers ogone, formulaire avec tous les champs en Hidden
@param ogone the Ogone  request
#}
{% block main_content %}
{% spaceless %}
<form id="goto-ogone" action="{{ ogone.action }}" method="{{ ogone.method }}">

    <!-- order spec -->
	<input type="hidden" name="ORDERID" value="{{ ogone.orderId }}" />
    <input type="hidden" name="PSPID" value="{{ ogone.pspid }}" />
    <input type="hidden" name="PM" value="{{ ogone.pm }}" />
    <input type="hidden" name="AMOUNT" value="{{ ogone.amount }}" />
    <input type="hidden" name="CURRENCY" value="{{ ogone.currency }}" />
    <input type="hidden" name="LANGUAGE" value="{{ ogone.language }}" />
    <input type="hidden" name="OPERATION" value="{{ ogone.operation }}" />
    <!-- security -->
    <input type="hidden" name="SHASign" value="{{ ogone.sha1in }}" />



    <!-- order details -->
    <input type="hidden" name="CN" value="{{ ogone.cn }}" />
    <input type="hidden" name="EMAIL" value="{{ ogone.email}}" />
    <input type="hidden" name="OWNERADDRESS" value="{{ ogone.ownerAddress}}" />
    <input type="hidden" name="OWNERZIP" value="{{ ogone.ownerZip }}" />
    <input type="hidden" name="OWNERTOWN" value="{{ ogone.ownerTown }}" />
    <input type="hidden" name="OWNERCTY" value="{{ ogone.ownerCty }}" />

    <!-- URL -->
    <input type="hidden" name="ACCEPTURL" value="{{ ogone.acceptUrl }}" />
    <input type="hidden" name="BACKURL" value="{{ ogone.backUrl }}" />
    <input type="hidden" name="CANCELURL" value="{{ ogone.cancelUrl }}" />
    <input type="hidden" name="DECLINEURL" value="{{ ogone.declineUrl }}" />

    <div class="textinfo">
    	<p>
    		{{'ogone.help'|trans}}
    	</p>
    	<p>
    		{{ 'ogone.alternative'| trans }} <input value="{{ 'label.click_here'|trans }}" type="submit" name="goOgone" class="btn btn-primary"/>
    	</p>
    </div>
</form>
{% endspaceless %}
{% endblock %}

{% block end %}
	{{ parent() }}
	<script  type="text/javascript">
        $(function() {
		  $("#goto-ogone").submit();
        });
   	</script>
{% endblock %}
