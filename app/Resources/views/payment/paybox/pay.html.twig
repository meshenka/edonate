{% block main_content %}
{% spaceless %}

<form  id="goto-paybox" action="{{ url }}">
    {{ paybox.form(form) }}

    <div class="textinfo">
        <p>
            {{'In a few seconds, you will be led to the payment page.'|trans}}
        </p>
        <p>
            {{ 'If it is not the case, please '| trans }} <input value="{{ 'Click here'|trans }}" type="submit" class="btn btn-primary"/>
        </p>
    </div>
</form>

{% endspaceless %}
{% endblock %}

{% block end %}
    {{ parent() }}
    <script  type="text/javascript">
        $(function() {
            $("#goto-paybox").submit();
        });
    </script>
{% endblock %}
