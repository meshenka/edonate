{% extends ":admin:layout.html.twig" %}
{% trans_default_domain "FOSUserBundle" %}

{% block main_content %}
<h2>Authentification</h2>
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<form action="{{ path('fos_user_security_check') }}" method="post" role="form">
    <div class="form-group">
        <label for="username" >{{ 'security.login.username'|trans }} </label>
        <input type="text" class="form-control"  placeholder="login" id="username" name="_username" value="{{ last_username }}" />
    </div>

    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" class="form-control"  placeholder="mot de passe"  />
    </div>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <input type="hidden" name="_target_path" value="/secured" />
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    {# @see http://symfony.com/doc/current/cookbook/security/remember_me.html
    #}
    <div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" checked />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <div class="form-group">
         <div class="input-group">
             <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary"/>
             <a href="{{ path('fos_user_resetting_request') }}">{{ "security.login.request_reset_password" | trans }}</a>
         </div>
     </div>
</form>
{% endblock %}
