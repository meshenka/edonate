{% trans_default_domain 'FOSUserBundle' %}

{{form_start(form,{'attr': {'class': 'fos_user_change_password', 'role' : 'form'}})}}

    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_row(form.current_password, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.new.first, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(form.new.second, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
{{ form_end(form) }}
