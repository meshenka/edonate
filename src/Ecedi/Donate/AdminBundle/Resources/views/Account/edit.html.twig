{% extends "DonateAdminBundle::layout.html.twig" %}

{% block main_content %}
{{form_start(form)}}
        {{ form_errors(form) }}
        <div class="form-group">
            {{ form_row(form.username, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            <div class="input-group">
                {{ form_row(form.roles) }}
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                {{ form_row(form.enabled) }}
            </div>
        </div>
        <div>
            {{ form_widget(form.submit_save, { 'attr': {'class': 'btn btn-primary' } }) }}
            {{ form_widget(form.submit_delete, { 'attr': {'class': 'btn btn-primary' } }) }}
        </div>
{{form_end(form)}}
{% endblock main_content %}
