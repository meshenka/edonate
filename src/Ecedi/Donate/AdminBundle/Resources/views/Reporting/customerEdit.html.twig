{% extends "DonateAdminBundle::layout.html.twig" %}
{% block main_content %}
<div class="form-filter">
<h3>{{ "Edit" | trans }}</h3>
{{ form_start(editForm,  { 'attr': {'role': 'form'} }) }}
    {{ form_errors(editForm) }}

    <div class="form-group">
        {{ form_row(editForm.email,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.lastName,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.firstName,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.company,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.phone,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.addressStreet,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.addressPb,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.addressLiving,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.addressExtra,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.addressZipcode,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.addressCity,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
        {{ form_row(editForm.addressCountry,  { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        {{ form_widget(editForm.submit, { 'attr': {'class': 'btn btn-primary' } }) }}
        <a href="{{ path('donate_admin_reporting_customers') }}" class="btn btn-reset-filters">{{ "Cancel" | trans }}</a>
    </div>
    {{ form_end(editForm) }}
</div>
{% endblock main_content %}
