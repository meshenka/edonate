{% import "DonateAdminBundle::macros.html.twig" as macros %}
{% set currentItem = cnerta_breadcrumb_get('DonateAdminBundle:Builder:adminMenu') %}
<li><a href="{{ path('donate_admin_dashboard') }}">{{ macros.icon('home') }} Accueil</a></li>
{% for item in currentItem %}
	
    {% if loop.index != 1 %}
        {% if not loop.last %}<li>       
        <a href="{{ item.uri }}">
        	
	        {% if item.item.attribute('data-icon') is not empty  %}
	            <span class="{{ item.item.attribute('data-icon') }}"></span>
	        {% endif %}
	    	        	{{ item.label | trans }}

        </a></li>
        {% else %}<li>
			{% if item.item.attribute('data-icon') is not empty  %}
	            <span class="{{ item.item.attribute('data-icon') }}"></span>
	        {% endif %}
        	<span>{{ item.label | trans }}</span></li>
        {% endif %}
    {% endif %}
{% endfor %}
